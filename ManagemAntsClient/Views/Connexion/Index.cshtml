@{
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

<div>
    <nav class="navbar py-0 bg-blue shadow">
        <span class="navbar-text text-white m-auto">Connexion</span>
    </nav>
    <div class="mt-5 pt-5 container-fluid">
        <div class="row justify-content-around no-gutters align-items-center">
           
            <div class="col-5 shadow bg-lightgray p-5">
                @using (Html.BeginForm("Login", "Connexion", FormMethod.Post))
                {
                    <h3 class="text-center">Connexion</h3>
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div>Pseudo</div>
                            <input value="" name="pseudo" placeholder="Pseudo" class="form-control" />
                        </div>
                    </div>

                    <div class="row justify-content-center mt-3">
                        <div class="col-md-6">
                            <div>Mot de passe</div>
                            <input type="password" name="password" value="" placeholder="********" class="form-control" />
                        </div>
                    </div>
                    <div class="text-center  mt-5">
                        <button class="btn btn-sm btn-secondary m-auto">Connexion</button>
                    </div>
                }
                </div>
            <div class="col-5 shadow bg-lightgray p-4">
                @using (Html.BeginForm("SignUp", "Connexion", FormMethod.Post))
                {
                    <h3 class="text-center">Inscription</h3>
                    <div class="row justify-content-center">
                        <div class="col-8">
                            <div class="row justify-content-between mt-3">
                                <div class="col-6">
                                    <div>Nom</div>
                                    <input value="" name="lastname" placeholder="Nom" class="form-control" />
                                </div>
                                <div class="col-6">
                                    <div>Prenom</div>
                                    <input value="" name="firstname" placeholder="Prenom" class="form-control" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div>
                                    <div class="col-12 justify-content-start">
                                        <div>Pseudo</div>
                                        <input value="" name="pseudo" placeholder="Pseudo" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-between mt-3">
                                <div class="col-6">
                                    <div>Mot de passe</div>
                                    <input type="password" name="password" value="" placeholder="********" class="form-control" />
                                </div>
                                <div class="col-6">
                                    <div>Confirmer</div>
                                    <input type="password" name="verification_password" value="" placeholder="********" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center  mt-5">
                        <button class="btn btn-sm btn-secondary m-auto">Inscription</button>
                    </div>
                }
                </div>
            </div>
    </div>
</div>